<% include ./shared/header.ejs%>

	<div class="col-md-8">
		<div class="col-md-12">
			<div align="right">
			<button class="btn btn-success" id="add"><i class="glyphicon glyphicon-plus"></i></button>
			</div>
			<div class="panel panel-default">
					<table class="table table-striped table-bordered">
  						<thead>	
  							<tr>
    							<th>Username</th>
    							<th>Email</th>
    							<th>Number of Posts</th>
    							<th>Action</th>
    							</tr>
  						</thead>
						<% users.forEach(function(user){%> 
						<tr>
							<td><%=user.username%></td>
							<td><%=user.email%></td>
							<td><%=user.posts.length%></td>
							<td>
							<button class="btn btn-success" id=<%=user.username%>><i class="glyphicon glyphicon-pencil"></i></button>
							<button name="deleteUser" class="btn btn-danger" data-value=<%=user.username%>><i class="glyphicon glyphicon-remove"></i></button>
							</td>
						</tr>
					<%});%>
					</table>
			</div>
		</div>
	</div>
<div class="col-md-2">
		<div class="sidebar content-box" style="display: block;">
			<ul class="sum">
	    		<li><i class="glyphicon glyphicon-user"></i> Active Users 10000000000</li>
        		<li><i class="glyphicon glyphicon-open"></i> Total Posts 2000000000</li>
        		<li><i class="glyphicon glyphicon-ok-circle"></i> Monthly SignUp 100000000</li>
    		</ul>
    	</div>
    </div>
</div>

</div>
<% include ./shared/modal.ejs%>

<script>
$("#users").attr("class","current");
$("#posts").attr("class","");


</script>
